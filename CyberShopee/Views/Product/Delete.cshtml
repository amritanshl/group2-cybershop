@model CyberShopee.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="delete-container">
    <h1>@ViewData["Title"]</h1>

    <div class="confirmation-card">
        <h4>Are you sure you want to delete this product?</h4>
        <hr />

        <div class="product-details">
            <h5>@Model.ModelName</h5>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> $@Model.UnitCost</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="action-buttons">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* General Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f8f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Main container */
    .delete-container {
        width: 60%;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        text-align: center;
        transform-style: preserve-3d;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .delete-container:hover {
            transform: rotateY(5deg);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
        }

    /* Confirmation card styling */
    .confirmation-card {
        background-color: #f9fafb;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

        .confirmation-card h4 {
            font-size: 1.3rem;
            color: #333;
        }

    .product-details {
        margin-top: 20px;
        font-size: 1.1rem;
        color: #555;
    }

        .product-details h5 {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 10px;
        }

        .product-details p {
            font-size: 1.1rem;
            color: #666;
        }

    /* Button Styling */
    .action-buttons {
        margin-top: 20px;
    }

    .btn {
        padding: 12px 25px;
        font-size: 1.1rem;
        cursor: pointer;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        border: none;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        }

    .btn-secondary {
        background-color: #7f8c8d;
        color: white;
        border: none;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        }

    /* Styling for the hidden input */
    input[type="hidden"] {
        display: none;
    }
</style>
