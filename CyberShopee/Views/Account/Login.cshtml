@model CyberShopee.ViewModels.Customer.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login to CyberShopee">
    <title>Login - CyberShopee</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary: #6a4cfa;
            --primary-dark: #5a39b2;
            --secondary: #f3f3f3;
            --text-primary: #fff;
            --text-secondary: #b0b3c1;
            --dark-purple: #1a113d;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            background: var(--dark-purple);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            color: var(--text-primary);
            overflow: hidden;
        }

        .page-wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
            background-color: var(--dark-purple);
        }

        .login-section {
            flex: 0 0 40%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            z-index: 10;
        }

        .image-section {
            flex: 0 0 60%;
            background: url('https://img.freepik.com/premium-photo/neon-shopping-cart-digital-interface-glowing-lines_1061150-98312.jpg') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem;
            position: relative;
        }

            .image-section::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.3);
                z-index: 1;
            }

            .image-section .text-container {
                position: relative;
                z-index: 2;
                text-align: center;
            }

        /* GLASS CONTAINER */
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 1.2em;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 24px;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.12);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }

        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 14px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

            .brand-logo i {
                font-size: 1.75rem;
                color: #1a113d;
            }

        h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
            position: relative;
        }

        /* INPUT STYLING - FORCING WHITE TEXT */
        .form-control {
            padding: 0.8rem 0.8rem 0.8rem 2.8rem;
            background-color: rgba(255, 255, 255, 0.07) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            color: white !important; /* Force text to be white */
            border-radius: 12px;
            transition: 0.3s;
        }

            /* Fix for placeholder color */
            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.5) !important;
            }

            /* Fix for browser autofill background/text color */
            .form-control:-webkit-autofill,
            .form-control:-webkit-autofill:hover,
            .form-control:-webkit-autofill:focus {
                -webkit-text-fill-color: white !important;
                -webkit-box-shadow: 0 0 0px 1000px #2a1f5c inset; /* Matches glass darkness */
                transition: background-color 5000s ease-in-out 0s;
            }

        .form-group i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: white; /* Changed icon to white */
            opacity: 0.8;
        }

        .btn-login {
            width: 100%;
            padding: 0.85rem;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            margin-top: 1rem;
            transition: 0.3s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(106, 76, 250, 0.3);
            }

        .footer-links {
            text-align: center;
            margin-top: 1.8rem;
        }

            .footer-links p {
                color: var(--text-secondary) !important;
                font-size: 0.9rem;
            }

        .signup-link {
            text-decoration: none;
            font-weight: 600;
            padding: 4px 10px;
            border-radius: 6px;
            transition: 0.3s;
        }

            .signup-link:hover {
                background: var(--primary);
                color: white !important;
            }

        @@media (max-width: 992px) {
            .page-wrapper

        {
            flex-direction: column;
            overflow-y: auto;
        }

        .login-section, .image-section {
            flex: 0 0 auto;
            width: 100%;
            min-height: 50vh;
        }

        .image-section {
            order: -1;
        }

        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <section class="login-section">
            <div class="login-container">
                <div class="logo-container">
                    <div class="brand-logo">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h1>Welcome Back</h1>
                    <p class="subtitle">Log in to your CyberShopee account</p>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <i class="fas fa-envelope"></i>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email Address", required = "required" })
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                    </div>

                    <div class="form-check mb-3">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label" style="color: var(--text-secondary);" for="RememberMe">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-login">Sign In</button>
                }

                <div class="footer-links">
                    <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="signup-link text-white">Signup Now</a></p>
                </div>
            </div>
        </section>

        <section class="image-section">
            <div class="text-container">
                <h2 style="font-size: 3rem; font-weight: 800; text-shadow: 2px 4px 10px rgba(0,0,0,0.8);">Discover the Best Deals</h2>
                <p style="font-size: 1.2rem; opacity: 0.9; text-shadow: 1px 2px 5px rgba(0,0,0,0.8);">Join CyberShopee and explore a world of tech at your fingertips.</p>
            </div>
        </section>
    </div>
</body>
</html>