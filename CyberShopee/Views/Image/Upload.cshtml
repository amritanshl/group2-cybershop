@model CyberShopee.Models.Image

@using (Html.BeginForm("Upload", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="upload-container">
        <div class="form-group">
            <label for="file" class="upload-label">Choose an image</label>
            <input type="file" id="file" name="file" class="form-control upload-input" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary upload-btn">Upload</button>
    </div>
}

<style>
    /* General body and layout settings */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Form container styling */
    .upload-container {
        width: 50%;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        transition: all 0.3s ease;
        transform-style: preserve-3d;
    }

        .upload-container:hover {
            transform: rotateY(5deg);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
        }

    .form-group {
        margin-bottom: 25px;
    }

    /* Label styling */
    .upload-label {
        display: block;
        font-size: 1.1rem;
        margin-bottom: 10px;
        color: #333;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .upload-label:hover {
            color: #3498db;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.15);
        }

    /* File input styling */
    .upload-input {
        display: block;
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #f8f8f8;
        transition: all 0.3s ease;
    }

        .upload-input:hover {
            border-color: #3498db;
            background-color: #eaf3fd;
            transform: scale(1.02);
        }

    /* Submit button styling */
    .upload-btn {
        padding: 12px 30px;
        font-size: 1.1rem;
        color: white;
        background-color: #3498db;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .upload-btn:hover {
            background-color: #2980b9;
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        }

    /* Error message styling */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        color: #e74c3c;
    }
</style>
